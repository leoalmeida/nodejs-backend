  "homepage": "https://github.com/leoalmeida/nodejs-backend#readme",
  "dependencies": {
    "body-parser": "^2.2.0",
    "config": "^4.0.0",
    "express": "^5.1.0",
    "mongoose": "^8.16.1",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "dotenv": "^17.0.1",
    "eslint": "^9.25.1",
    "express-mongo-sanitize": "^2.2.0",
    "globals": "^16.0.0",
    "jest": "^30.0.3",
